<h1><%= current_user.char_name %></h1>
<p>Experience: <%= current_user.experience %></p>
<p>Speed: <%= current_user.speed %></p>
<p>Endurance: <%= current_user.endurance %></p>
<p>Mental:  <%= current_user.mental %></p>
<p>Level:  <%= current_user.level %></p>

<h2>Inbox</h2>

<% @quest_inbox.each do |quest| %>
<p><a href="/quests/#{quest.id}" ><%= quest.name %></a> assigned by <%= quest.assigner.char_name %></p>
<%= form_tag "/quests/#{quest.id}", method: :patch do %>
    <%= radio_button_tag :choice, 1 %>
    <%= label_tag :choice_accept, "Accept" %>
    <%= radio_button_tag :choice, 2 %>
    <%= label_tag :choice_decline, "Decline" %>
    <%= submit_tag "Submit" %>
  <% end %>
<% end %>

<h3>Active Quests</h3>
<% @active_inbox.each do |quest| %>
<p><a href="/quests/<%= quest.id %>" ><%= quest.name %></a></a> assigned by <%= quest.assigner.char_name %></p>
<% end %>

<h3>Declined Quests</h3>
<% @declined_inbox.each do |quest| %>
<p><a href="/quests/<%= quest.id %>" ><%= quest.name %></a></a> assigned by <%= quest.assigner.char_name %></p>
<% end %>

<h3>Cancelled Quests</h3>
<% @cancelled_inbox.each do |quest| %>
<p><a href="/quests/<%= quest.id %>" ><%= quest.name %></a></a> assigned by <%= quest.assigner.char_name %></p>
<% end %>

<h3>Completed Quests</h3>
<% @complete_inbox.each do |quest| %>
<p><a href="/quests/<%= quest.id %>" ><%= quest.name %></a> assigned by <%= quest.assigner.char_name %></p>
<% end %>

<h2>Outbox</h2>

<% @quest_outbox.each do |quest| %>
<p><a href="/quests/<%= quest.id %>" ><%= quest.name %></a> assigned to <%= quest.assignee.char_name %></p>
<% end %>

<h3>Active Quests</h3>
<% @active_outbox.each do |quest| %>
<p><a href="/quests/<%= quest.id %>" ><%= quest.name %></a> assigned to <%= quest.assignee.char_name %></p>
<% end %>

<h3>Declined Quests</h3>
<% @declined_outbox.each do |quest| %>
<p><a href="/quests/<%= quest.id %>" ><%= quest.name %></a> assigned to <%= quest.assignee.char_name %></p>
<% end %>

<h3>Cancelled Quests</h3>
<% @cancelled_outbox.each do |quest| %>
<p><a href="/quests/<%= quest.id %>" ><%= quest.name %></a> assigned to <%= quest.assignee.char_name %></p>
<% end %>

<h3>Completed Quests</h3>
<% @complete_outbox.each do |quest| %>
<p><a href="/quests/<%= quest.id %>" ><%= quest.name %></a> assigned to <%= quest.assignee.char_name %></p>
<% end %>

<h3><a href="/friends">Friends</a></h3>
<% @accepted_friends.each do |friend| %>
  <p><a href="/users/<%= friend.id %>"><%= friend.char_name %></a></p>
<% end %>

<h3>Pending Friend Requests Sent</h3>
<% @pending_friends_sent.each do |friend| %>
  <p><%= friend.char_name %></p>
<% end %>

<h3>Pending Friend Requests Received</h3>
<% @pending_friends_received.each do |friend| %>
  <p><%= friend.char_name %></p>
  <%= form_tag "/friends/#{friend.id}", method: :patch do %>
    <%= radio_button_tag :choice, 1 %>
    <%= label_tag :choice_accept, "Accept" %>
    <%= radio_button_tag :choice, 2 %>
    <%= label_tag :choice_decline, "Decline" %>
    <%= submit_tag "Submit" %>
  <% end %>
<% end %>

<p><a href="/users">Find new friends</a></p>
<p><a href="/activities">See all my activities</a></p>
<% unless current_user.access_token %>
<a href="<%= @auth %>">Connect to RunKeeper</a>
<% end %>
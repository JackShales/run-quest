<h1><%= @quest.name %></h1>
<h3><%= @quest.quest_type %> Quest</h3>
<h5>Assigned by <%= @assigner.char_name %> to <%= "#{@assignee.char_name}, #{@quest.status}" %></h5>
<p><%= @quest.notes %></p>
<p>Deadline: <%= @quest.deadline %> </p>
<h3>Quest Activities</h3>
<% @quest_activities.each do |activity| %>
  <h5>Run on <%= activity.friendly_start_time %></h5>
  <p><%= activity.distance_in_miles %> miles, duration of <%= activity.friendly_duration %>, average pace of <%= activity.avg_pace %>, <%= activity.calories %> calories burned</p>
<% end %>

<p><a href="/quests">Back to All Quests</a></p>
<p><a href="/">Return Home</a></p>

  <h3>Link Recent Activities to Quest</h3>
    <div>
    <% @show_activities.each do |activity| %>
        <%= form_tag  "/activities/#{activity.id}", method: :patch do %>
          <%= hidden_field_tag :quest_id, @quest.id %>
          <%= submit_tag "Run on #{activity.friendly_start_time}" %>
        <% end %>
        <p><%= activity.distance_in_miles %> miles, duration of <%= activity.friendly_duration %>, average pace of <%= activity.avg_pace %>, <%= activity.calories %> calories burned</p>
    <% end %>
    </div>




<% if @quest.status_code == 1 && current_user.id == @quest.assignee_id %>
<%= form_tag "/quests/#{@quest.id}", method: :patch do %>
    <%= check_box_tag :choice, 3 %>
    <%= label_tag :choice_cancel, "Cancel Quest" %>
    <%= submit_tag "Submit" %>
  <% end %>
<% end %>

<% if @quest.status_code == 1 && current_user.id == @quest.assigner_id %>
  <%= form_tag "/quests/#{@quest.id}", method: :patch do %>
    <%= radio_button_tag :choice, 4 %>
    <%= label_tag :choice_complete, "Quest Completed" %>
    <%= radio_button_tag :choice, 3 %>
    <%= label_tag :choice_cancel, "Cancel Quest" %>
    <%= submit_tag "Submit" %>
  <% end %>
<% end %>


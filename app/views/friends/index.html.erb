<div data-spy="scroll" data-target=".page-header" data-offset="100">
<section class="page-header page-header-xs">
        <div class="container">

          <h1>FRIENDS</h1>

          <ol class="breadcrumb">
            <li><a href="#section1">My Friends</a></li>
            <li><a href="#section2">Pending</a></li>
            <li><a href="#section3">Requests</a></li>
            <li><a href="/users">Find New Friends</a></li>
          </ol><!-- /breadcrumbs -->

        </div>
      </section>
      <!-- /PAGE HEADER -->
      <!-- -->
      <% if @accepted_friends.length != 0 %>
        <section id="section1">
          <div class="container">
            <% @accepted_friends.each_slice(4) do |four_friends| %>
              <div class="row">
                <% four_friends.each do |user| %>
                  <% if user.id != current_user.id %>
                    <div class="col-md-3">
                      <div class="box-flip box-color box-icon box-icon-center box-icon-round box-icon-large text-center">
                        <div class="front box-shadow-1 opacity-8">
                          <div class="box1 box-default">
                            <div class="box-icon-title">
                              <img class="img-responsive" src="<%= user.avatar %>" alt="" />
                              <hr>
                              <h2><%= user.char_name %></h2>
                              <small>Lv. <%= user.level  %> Hero</small>
                            </div>
                          </div>
                        </div>
        
                        <div class="back box-shadow-1 opacity-8">
                          <div class="box2 box-default">
                            <h4 class="nomargin"><a href="/users/<%= user.id %>"><%= user.char_name %></a></h4>
                            <small>Lv. <%= user.level  %> Hero</small>
                            <hr>
                                <p>Endurance: <%= user.endurance %></p>
                                <p>Speed: <%= user.speed %></p>
                                <p>Mental: <%= user.mental %></p>
                            <hr>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <br>
            <% end %>
          </div>
        </section>
      <% end %>

      <br>

      <% if @pending_friends_sent.length != 0 %>
        <section id="section2">
          <div class="container">
          <h2>Friend requests sent</h2>
            <% @pending_friends_sent.each_slice(4) do |four_friends| %>
              <div class="row">
                <% four_friends.each do |user| %>
                  <% if user.id != current_user.id %>
                    <div class="col-md-3">
                      <div class="box-flip box-color box-icon box-icon-center box-icon-round box-icon-large text-center">
                        <div class="front box-shadow-1 opacity-8">
                          <div class="box1 box-default">
                            <div class="box-icon-title">
                              <img class="img-responsive" src="<%= user.avatar %>" alt="" />
                              <hr>
                              <h2><%= user.char_name %></h2>
                              <small>Lv. <%= user.level  %> Hero</small>
                            </div>
                          </div>
                        </div>
        
                        <div class="back box-shadow-1 opacity-8">
                          <div class="box2 box-default">
                            <h4 class="nomargin"><%= user.char_name %></h4>
                            <small>Lv. <%= user.level  %> Hero</small>
                            <hr />
                                <p>Endurance: <%= user.endurance %></p>
                                <p>Speed: <%= user.speed %></p>
                                <p>Mental: <%= user.mental %></p>
                            <hr />
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </section>
      <% end %>

      <% if @pending_friends_received.length != 0 %>
        <section id="section3">
          <div class="container">
          <h2>Friend requests received</h2>
            <% @pending_friends_received.each_slice(4) do |four_friends| %>
              <div class="row">
                <% four_friends.each do |user| %>
                  <% if user.id != current_user.id %>
                    <div class="col-md-3">
                      <div class="box-flip box-color box-icon box-icon-center box-icon-round box-icon-large text-center">
                        <div class="front box-shadow-1 opacity-8">
                          <div class="box1 box-default">
                            <div class="box-icon-title">
                              <img class="img-responsive" src="<%= user.avatar %>" alt="" />
                              <hr>
                              <h2><%= user.char_name %></h2>
                              <small>Lv. <%= user.level  %> Hero</small>
                            </div>
                          </div>
                        </div>
        
                        <div class="back box-shadow-1 opacity-8">
                          <div class="box2 box-default">
                            <h4 class="nomargin"><%= user.char_name %></h4>
                            <small>Lv. <%= user.level  %> Hero</small>
                            <hr>
                                <p>Endurance: <%= user.endurance %></p>
                                <p>Speed: <%= user.speed %></p>
                                <p>Mental: <%= user.mental %></p>
                            <hr>
                            <%= form_tag "/friends/#{user.id}", method: :patch do %>
                              <div class="button-group row margin-bottom-10" data-toggle="buttons">
                                <div class="col-md-2"></div>
                                <div class="col-md-4 btn btn-default noborder-right">
                                  <%= label_tag :choice_accept, "Accept" %>
                                  <%= radio_button_tag :choice, 1 %>
                                </div>
                                <div class="col-md-4 btn btn-default">
                                  <%= radio_button_tag :choice, 2 %>
                                  <%= label_tag :choice_decline, "Decline" %>
                                </div>
                                <div class="col-md-2"></div>
                              </div>
                              <div class="row">
                                <%= submit_tag "Submit", class: "btn btn-default" %>
                              </div>
                              
                            <% end %>
                            </div>
                          </div>
                        
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
        </section>
      <% end %>
     </div> 
      <!-- / -->


     